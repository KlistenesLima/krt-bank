{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=krtbank;Username=krt;Password=KrtBank2026"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "KRT.Gateway"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "onboarding-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        }
      },
      "onboarding-route": {
        "ClusterId": "onboarding-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/v1/accounts/{**catch-all}"
        }
      },
      "pix-keys-route": {
        "ClusterId": "onboarding-cluster",
        "Match": {
          "Path": "/api/v1/pix-keys/{**catch-all}"
        }
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/v1/payments/{**catch-all}"
        }
      },
      "pix-route": {
        "ClusterId": "payments-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/v1/pix/{**catch-all}"
        },
      "signalr-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/hubs/{**catch-all}"
        },
      "notifications-route": {
        "ClusterId": "payments-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/v1/notifications/{**catch-all}"
        },
      "cards-route": {
        "ClusterId": "payments-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/v1/cards/{**catch-all}"
        }
      }
      }
      }
      }
    },
    "Clusters": {
      "onboarding-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Path": "/health"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Path": "/health"
          }
        }
      }
    }
  }
}


