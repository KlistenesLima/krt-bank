{
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": { "ClusterId": "onboarding-cluster", "Match": { "Path": "/api/v1/auth/{**catch-all}" } },
      "onboarding-route": { "ClusterId": "onboarding-cluster", "Match": { "Path": "/api/v1/accounts/{**catch-all}" } },
      "pix-keys-route": { "ClusterId": "onboarding-cluster", "Match": { "Path": "/api/v1/pix-keys/{**catch-all}" } },
      "payments-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/payments/{**catch-all}" } },
      "pix-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/pix/{**catch-all}" } },
      "admin-route": { "ClusterId": "payments-cluster", "RateLimiterPolicy": "admin", "Match": { "Path": "/api/v1/admin/{**catch-all}" } },
      "signalr-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/hubs/{**catch-all}" } },
      "notifications-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/notifications/{**catch-all}" } },
      "cards-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/cards/{**catch-all}" } },
      "boletos-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/boletos/{**catch-all}" } },
      "statement-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/statement/{**catch-all}" } },
      "health-route": { "ClusterId": "payments-cluster", "Match": { "Path": "/api/v1/health/{**catch-all}" } }
    },
    "Clusters": {
      "onboarding-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://onboarding-api:80/"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://payments-api:80/"
          }
        }
      }
    }
  }
}

