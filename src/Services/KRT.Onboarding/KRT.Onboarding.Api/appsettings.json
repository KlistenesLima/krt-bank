{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=krt_onboarding;Username=postgres;Password=postgres"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/krt-bank",
    "Audience": "krt-bank-app"
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "GroupId": "krt-onboarding-group",
    "TopicPrefix": "krt",
    "EnableIdempotence": true
  },
  "Redis": {
    "ConnectionString": "localhost:6380",
    "InstanceName": "KRT_"
  },
  "Outbox": {
    "Enabled": true,
    "BatchSize": 100,
    "PollingIntervalSeconds": 5,
    "MaxRetryCount": 3
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Seq", "Args": { "serverUrl": "http://localhost:5341" } }
    ]
  },
  "AllowedHosts": "*"
}
