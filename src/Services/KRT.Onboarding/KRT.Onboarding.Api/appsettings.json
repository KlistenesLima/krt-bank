{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=krt_bank;Username=postgres;Password=postgres"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,password=KrtBank@2024",
    "InstanceName": "KRT_",
    "DefaultExpirationMinutes": 60
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "krt-onboarding-group",
    "TopicPrefix": "krt",
    "EnableIdempotence": true,
    "MessageTimeoutMs": 5000,
    "RetryBackoffMs": 100
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "krt_admin",
    "Password": "KrtBank@2024",
    "VirtualHost": "/"
  },
  "Outbox": {
    "Enabled": true,
    "BatchSize": 100,
    "PollingIntervalSeconds": 5,
    "MaxRetryCount": 3
  },
  "Jwt": {
    "Authority": "http://localhost:8180/realms/krt-bank",
    "Audience": "krt-api",
    "RequireHttpsMetadata": false
  },
  "AllowedHosts": "*"
}
