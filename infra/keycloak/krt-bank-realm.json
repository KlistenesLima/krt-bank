{
  "realm": "krt-bank",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 1800,
  "ssoSessionMaxLifespan": 86400,
  "roles": {
    "realm": [
      { "name": "user", "description": "Correntista comum" },
      { "name": "admin", "description": "Administrador do banco" }
    ],
    "client": {
      "krt-bank-app": [
        { "name": "account_read", "description": "Ler dados da conta" },
        { "name": "account_write", "description": "Operações na conta" },
        { "name": "pix_transfer", "description": "Realizar transferências Pix" }
      ]
    }
  },
  "clients": [
    {
      "clientId": "krt-bank-app",
      "name": "KRT Bank Frontend",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "rootUrl": "http://localhost:4200",
      "baseUrl": "/",
      "redirectUris": [
        "http://localhost:4200/*"
      ],
      "webOrigins": [
        "http://localhost:4200",
        "http://localhost:5000"
      ],
      "protocol": "openid-connect",
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone"
      ],
      "protocolMappers": [
        {
          "name": "account-id-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "account_id",
            "claim.name": "account_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "jsonType.label": "String"
          }
        },
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "krt-bank-app",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "krt-bank-service",
      "name": "KRT Bank Service-to-Service",
      "enabled": true,
      "publicClient": false,
      "secret": "krt-bank-service-secret",
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": false,
      "protocol": "openid-connect"
    }
  ],
  "users": [
    {
      "username": "demo",
      "enabled": true,
      "email": "demo@krtbank.com",
      "firstName": "Demo",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "demo123",
          "temporary": false
        }
      ],
      "realmRoles": ["user"],
      "clientRoles": {
        "krt-bank-app": ["account_read", "account_write", "pix_transfer"]
      },
      "attributes": {
        "account_id": [""]
      }
    },
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@krtbank.com",
      "firstName": "Admin",
      "lastName": "KRT",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["user", "admin"],
      "clientRoles": {
        "krt-bank-app": ["account_read", "account_write", "pix_transfer"]
      }
    }
  ],
  "scopeMappings": [
    {
      "client": "krt-bank-app",
      "roles": ["user"]
    }
  ]
}
